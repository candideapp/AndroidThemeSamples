<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Actionbar">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>
	<style name="Actionbar_TitleBar">
        <item name="android:id">@id/actionbar_title_container</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/actionbar_title_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/actionbar_title_background</item>
    </style>
    <style name="Actionbar_TitleBarAction">
        <item name="android:layout_width">@dimen/actionbar_title_height</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/actionbar_title_button</item>
    </style>
    <style name="Actionbar_TitleBarSeparator">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/actionbar_title_separator</item>
    </style>
    <style name="Actionbar_TitleBarText">
        <item name="android:id">@id/actionbar_title_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/actionbar_text_size_medium</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/actionbar_title_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
